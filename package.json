{
  "name": "contracts",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "hardhat test",
    "test:lifecycles": "hardhat test nodejs test/integration/CompleteEscrowLifecycles.test.ts",
    "test:disputes": "hardhat test nodejs test/integration/DisputeLifecycles.test.ts",
    "test:security": "hardhat test nodejs test/integration/SecurityAndEdgeCases.test.ts",
    "test:all-workflows": "npm run test:lifecycles && npm run test:disputes",
    "test:all": "npm run test:lifecycles && npm run test:disputes && npm run test:security",
    "compile": "hardhat compile",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/PluriSwapDeployment.ts --network sepolia",
    "verify:sepolia": "hardhat ignition verify --network sepolia", 
    "validate:sepolia": "hardhat run scripts/validate-deployment.ts --network sepolia",
    "deploy:mainnet": "hardhat ignition deploy ignition/modules/PluriSwapDeployment.ts --network mainnet --solidity-profile production",
    "node:sepolia": "hardhat node --fork $SEPOLIA_RPC_URL",
    "console:sepolia": "hardhat console --network sepolia"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@types/node": "^22.17.2",
    "@types/mocha": "^10.0.6",
    "@types/chai": "^4.3.11",
    "chai": "^4.3.10",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.1",
    "mocha": "^10.2.0",
    "typescript": "~5.8.0",
    "viem": "^2.35.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  }
}
